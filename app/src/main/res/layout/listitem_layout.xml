<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/listitem_linear"
    android:background="@drawable/listselect_layout"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listitem_text_title"
            android:text="啊实打实的"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/listitem_text_address"
            android:text="啊实打实的"
            android:textSize="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_linear_more"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/listitem_text_more"
            android:textColor="#1296db"
            android:layout_marginLeft="10dp"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>