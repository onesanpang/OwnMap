<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/listselect_layout"
    android:padding="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/bussearchitem_title"
        android:text="606路"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bussearchitem_qujian"
        android:text="老福山东--老福山花园"
        android:layout_width="match_parent"
        android:textColor="#8A8A8A"
        android:layout_marginTop="10dp"
        android:textSize="11dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="首"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:background="@drawable/station_text_first"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/bussearchitem_first"
            android:text="5:30"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="末"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:background="@drawable/station_text_end"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/bussearchitem_end"
            android:text="22:30"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bussearchitem_price"
            android:layout_marginLeft="10dp"
            android:text="起步价2元"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>