<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="persondialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/persondialog_enter</item>
        <item name="android:windowExitAnimation">@anim/persondialog_exit</item>
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->
    </style>

    <style name="persondelectdialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/persondialog_enter</item>
        <item name="android:windowExitAnimation">@anim/persondialog_exit</item>
        <item name="android:backgroundDimEnabled">true</item><!--activity变暗-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
